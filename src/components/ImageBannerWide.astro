---
const {
  title,
  text,
  backgroundImage = "/images/contact-hero.jpg",
  backgroundPosition = "center",

} = Astro.props;
---

<section class="relative bg-gray-100 py-35 px-6 mx-auto">

  <div class="absolute inset-0 z-0 bg-cover bg-center opacity-45 bg-no-repeat" style={`background-image: url('${backgroundImage}'); background-position: ${backgroundPosition};`}> </div> <!-------- Background image -------->

  
  <div class=" w-[25%] bg-beige rounded-4xl p-10 opacity-60 text-center"> <!-------- Image text div -------->
    <h1 class="text-4xl md:text-5xl z-50 font-bold text-olive uppercase">
      {title}
    </h1>
    <p class="mt-4 text-xl text-black  uppercase">
      {text}
    </p>
   
  </div>
</section>
