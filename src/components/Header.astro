---
const allLinks = [
  { name: "Hem", href: "/" },
  { name: "Gläntan", href: "/about" },
  { name: "Butik", href: "/shop" },
  { name: "Kontakt", href: "/contact" },
];
const links1 = [
  { name: "Hem", href: "/" },
  { name: "Gläntan", href: "/about" },
];
const links2 = [
  { name: "Butik", href: "/shop" },
  { name: "Kontakt", href: "/contact" },
];
---

<!------------------------------- Header ------------------------------->
<header id="site-header" class="sticky top-0 w-full h-[50vh] bg-champagne/70 text-center flex items-center justify-center gap-6 md:gap-20 shadow-md transition-all duration-300 z-50 backdrop-blur-sm">

  <!-------- Navigation part one (hidden on mobile) -------->
  <nav class="hidden md:flex space-x-6 w-56 uppercase">
    {links1.map(link => (
      <a
        href={link.href}
        class="text-olive text-xl md:text-2xl hover:text-brown-beige transition"
      >
        {link.name}
      </a>
    ))}
  </nav>

  <!-------- Hamburger menu button (visible on mobile) -------->
  <button
    id="hamburger-btn"
    class="flex md:hidden text-olive focus:outline-none mr-4"
    aria-label="Toggle menu"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>

  <!-------- Logo -------->
  <a href="/" class="mb-2">
    <img  id="site-logo" src="/images/logo-round.png" alt="Gläntans djur och natur" class="h-40 md:h-60 w-auto transition-all duration-300"/>
  </a>

  <!-------- Navigation part two (hidden on mobile) -------->
  <nav class="hidden md:flex space-x-6 w-56 uppercase">
    {links2.map(link => (
      <a
        href={link.href}
        class="text-olive text-xl md:text-2xl hover:text-brown-beige transition font-medium"
      >
        {link.name}
      </a>
    ))}
  </nav>

  <!-------- Close button placeholder (will be shown in mobile menu) -------->
  <button
    id="close-menu-btn"
    class="hidden absolute top-6 right-6 text-olive focus:outline-none"
    aria-label="Close menu"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

</header>

<!-------- Mobile menu overlay -------->
<div
  id="mobile-menu"
  class="hidden fixed inset-0 bg-champagne/95 backdrop-blur-md z-40 flex-col items-center justify-center"
  style="display: none;"
>
  <button
    id="close-menu-btn-overlay"
    class="absolute top-6 right-6 text-olive focus:outline-none"
    aria-label="Close menu"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <nav class="flex flex-col items-center justify-center space-y-8 uppercase">
    {allLinks.map(link => (
      <a
        href={link.href}
        class="text-olive text-2xl hover:text-brown-beige transition font-medium"
      >
        {link.name}
      </a>
    ))}
  </nav>
</div>

<script is:inline>
  if (typeof document !== "undefined") {
    const hamburgerBtn = document.getElementById("hamburger-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const closeMenuBtn = document.getElementById("close-menu-btn-overlay");
    const menuLinks = mobileMenu.querySelectorAll("a");
    const siteHeader = document.getElementById("site-header");

    // Toggle menu on hamburger click
    hamburgerBtn.addEventListener("click", () => {
      const isHidden = mobileMenu.style.display === "none";
      mobileMenu.style.display = isHidden ? "flex" : "none";
    });

    // Close menu on close button click
    closeMenuBtn.addEventListener("click", () => {
      mobileMenu.style.display = "none";
    });

    // Close menu when a link is clicked
    menuLinks.forEach(link => {
      link.addEventListener("click", () => {
        mobileMenu.style.display = "none";
      });
    });

    // Header scroll animation
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        siteHeader.classList.add("scrolled");
      } else {
        siteHeader.classList.remove("scrolled");
      }
    });
  }
</script>
